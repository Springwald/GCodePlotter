<UserControl x:Class="GCodePlotter.PreviewRenderer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GCodePlotter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Background="Gray">
        <Grid Name="DrawingArea" Background="White">
            <Canvas x:Name="RasterCanvas" Background="Transparent"></Canvas>
            <Canvas x:Name="PreviewCanvas" Background="Transparent"></Canvas>
            <Canvas x:Name="LiveCanvas" Background="Transparent"></Canvas>
        </Grid>
    </Grid>
</UserControl>
